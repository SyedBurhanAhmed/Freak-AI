<aiml version="1.0.1" encoding="UTF-8">

<!-- Direct DOB statements -->
<category>
    <pattern>MY DATE OF BIRTH IS *</pattern>
    <template>
        Thanks for telling me! I have noted your date of birth as <star/>.
        <think><set name="dob"><star/></set></think>
    </template>
</category>

