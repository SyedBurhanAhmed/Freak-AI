<!-- 1. User asks to delete chat history -->
<category>
    <pattern>DELETE * CHAT HISTORY</pattern>
    <template>
        <think><set name="delete">Yes</set></think>
        Your chat history has been scheduled for deletion.
    </template>
</category>

<!-- 2. Shorter phrasing -->
<category>
    <pattern>DELETE HISTORY</pattern>
    <template>
        <think><set name="delete">Yes</set></think>
        All previous messages will be removed.
    </template>
</category>

<!-- 3. Synonym: clear my chat -->
<category>
    <pattern>CLEAR * CHAT</pattern>
    <template>
        <think><set name="delete">Yes</set></think>
        Conversation cleared as requested.
    </template>
</category>

<!-- 4. Synonym: erase everything -->
<category>
    <pattern>ERASE *</pattern>
    <that>DELETE VARIABLE NOT SET</that>
    <template>
        <think><set name="delete">Yes</set></think>
        Your data will be erased.
    </template>
</category>

<!-- 5. Confirmation request -->
<category>
    <pattern>HAVE YOU DELETED MY CHAT</pattern>
    <template>
        <condition name="delete" value="Yes">
            Yes, your chat has been removed.
        </condition>
        <condition name="delete" value="No">
            No action was taken on your chat history.
        </condition>

    </template>
</category>

<!-- 6. Default fallback to reset delete flag -->
<category>
    <pattern>RESET DELETE FLAG</pattern>
    <template>
        <think><set name="delete">No</set></think>
        Delete flag has been reset.
    </template>
</category>

</aiml>