    <category>
        <pattern>I AM *</pattern>
        <template>
            <think><set name="mood"><star/></set></think>
            <condition name="sentiment">
                <li value="positive">
                    Happy to know. You are in a great mood.
                </li>
                <li value="negative">
                    Do not be negative. Here is a joke to lighten your mood.<br/>
                    <srai>TELL ME A JOKE</srai>
                </li>
                <li value="lie">
                    No, you are lying your name is <get name="username"/>.
                </li>
                <li value="truth">
                    I already know your name, <get name="username"/>.
                </li>
            </condition>
        </template>
    </category>

    <category>
